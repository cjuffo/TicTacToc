<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >


        <ImageView
            android:id="@+id/image_p1"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             />

        <ImageView
            android:id="@+id/image_p2"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
             />
    </RelativeLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
    <ProgressBar android:id="@+id/time_left"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginTop="@dimen/gap"
        android:layout_gravity="center">
    </ProgressBar>
    
    
    
    <TableLayout
        	android:id="@+id/the_table"
        	android:layout_marginTop="@dimen/gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TableRow>
                <ImageButton android:id="@+id/up_left"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/up_center"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/up_right"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
            </TableRow>
            
             <TableRow>
                <ImageButton android:id="@+id/mid_left"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/mid_center"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/mid_right"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
            </TableRow>
            
              <TableRow>
                <ImageButton android:id="@+id/low_left"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/low_center"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
                <ImageButton android:id="@+id/low_right"
                    android:layout_width="@dimen/table_button"
            		android:layout_height="@dimen/table_button"
            		android:src="@drawable/hbo"
            		android:scaleType="fitCenter"
                    android:onClick="myClickListener">
                </ImageButton>
            </TableRow>
            
        </TableLayout>
    </LinearLayout>
</LinearLayout>
